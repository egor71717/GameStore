@model GameStore.UI.Models.PublisherDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Publisher</h4>
    <hr />

    <div class="media">
        <div class="media-left media-middle">
            <img alt="Logo" src="data:image/@(Model.Publisher.Logo.Format);base64, @Convert.ToBase64String(Model.Publisher.Logo.Image)" />
        </div>
    </div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => Model.Publisher.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.Publisher.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => Model.Publisher.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.Publisher.Country)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => Model.Publisher.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.Publisher.Description)
        </dd>

    </dl>
</div>
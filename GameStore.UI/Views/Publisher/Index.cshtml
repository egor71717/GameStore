@model GameStore.UI.Models.PublisherIndexViewModel

<div class="row">
    <h2>Publishers</h2>
    @foreach (var item in Model.Publishers)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="data:image/@(item.Logo.Format);base64, @Convert.ToBase64String(item.Logo.Image)" alt="Logo">
                <div class="caption">
                    <h3>@Html.DisplayFor(model => item.Name)</h3>
                    <p>
                        <a href="~/@String.Format("Publisher/Details?id={0}", item.Id)"
                           class="btn btn-primary"
                           role="button">Подробнее</a>
                        <a href="~/@String.Format("Publisher/Games?id={0}", item.Id)" class="btn btn-default" role="button">К играм</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
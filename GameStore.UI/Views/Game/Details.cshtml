@model GameStore.UI.Models.GameDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<div>
    <h1>@Html.DisplayFor(model => model.Game.Name)</h1>
    <hr />
    <div class="media">
        <div class="media-left media-middle">
            <img alt="Logo" src="data:image/@(Model.Game.Picture.Format);base64, @Convert.ToBase64String(Model.Game.Picture.Image)" height='69' width="184" />
        </div>
        <div class="media-body">
            @Html.DisplayFor(model => model.Game.Description)
        </div>
    </div>
    <br />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Game.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.Price)
        </dd>
        @foreach (var category in Model.Game.Categories)
        {
            <dt>
                @Html.DisplayNameFor(model => category.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => category.Name)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Game.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Game.Requirements)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game.Requirements)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Game.Discount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Game.Discount)
        </dd>
        <dt>
            Publisher
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Game.Publisher.Name)
        </dd>
    </dl>
</div>
<p>
    @* @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Main")*@
    @Html.Partial("~/Views/Shared/GameComments.cshtml", Model.Game.Comments)
</p>